<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <ImageView
        android:src="@drawable/ic_face_black_24dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/tv_matching_school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_matching_student_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/matching_text_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:text="학년"
        android:textColor="#000000"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_matching_student_class_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginLeft="1dp" />

    <TextView
        android:id="@+id/matching_text_class_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="반"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_matching_student_student_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginLeft="1dp" />

    <TextView
        android:id="@+id/matching_text_student_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="번"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_matching_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/mMatchBt"
        android:src="@drawable/ic_drafts_black_24dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:layout_width="35dp"
        android:layout_height="35dp" />

