<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_face_black_24dp" />


    <TextView
        android:id="@+id/tv_managing_student_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tv_managing_student_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/text_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="1dp"
        android:text="학년"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_managing_student_class_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="1dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_class_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="1dp"
        android:textColor="#000000"
        android:text="반"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_managing_student_student_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="1dp"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/text_student_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="1dp"
        android:textColor="#000000"
        android:text="번"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_managing_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/bt_managing_student_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_clear_red_24dp"
        android:layout_marginRight="5dp" />
    />


</LinearLayout>